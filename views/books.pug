extends Layout

block content
  h1= 'Books'
  p 
    a(href="/books/new" class="button")= 'Create New Book'
    form(action='/books', method='post')
      input(type="text", name="search")
      button(type="submit")= 'Submit'
  table 
    thead 
      tr  
        th= 'Title'
        th= 'Author'
        th= "Genre"
        th= 'Year'
    tbody   
      each book in books 
        tr
          td  
            a(href="/books/" + book.id)= book.title 
          td= book.author 
          td= book.genre 
          td= book.year
  - var n = 1;
  ul
    while n <= pages
      a(class="button" href=`/books/page/${n}`)= n++  

